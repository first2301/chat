# Ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=ko-llama-8B
OLLAMA_TEMPERATURE=0.1

# Embedding
EMBEDDING_MODEL_NAME=/app/embedding_models/BGE-m3-ko
EMBEDDING_DEVICE=

# Split/Search
CHUNK_SIZE=500
CHUNK_OVERLAP=50
K=20


# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=rag_collection

# batch
INDEX_BATCH_SIZE=100
UPSERT_BATCH_SIZE=200

# 업서트/재시도
UPSERT_BATCH_SIZE=200
QDRANT_TIMEOUT=60
QDRANT_CONNECT_RETRIES=10
QDRANT_CONNECT_RETRY_INTERVAL=1
# QDRANT_API_KEY=

# Auto indexing
DATA_DIR=/app/data
DOC_GLOBS=**/*.pdf,**/*.txt

# 데이터/URL 규칙
DATA_DIR=/app/data
URL_FILE_DIRS=app/data/urls
URL_FILE_SUFFIXES=.url.txt

# 스타트업 정책
ON_MISSING_VECTOR_STORE=llm_only
