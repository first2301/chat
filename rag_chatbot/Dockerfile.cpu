FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

RUN pip install --no-cache-dir --upgrade pip

COPY test1_1/RAG/requirements_base.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt \
    && pip install --no-cache-dir \
        fastapi uvicorn \
        langchain langchain-community langchain-ollama langchain-huggingface \
        faiss-cpu pymupdf python-dotenv sentence-transformers

COPY . /app

EXPOSE 8000
CMD ["uvicorn", "test1_1.RAG.src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]

