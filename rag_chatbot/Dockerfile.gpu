FROM nvidia/cuda:12.1.1-cudnn-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-pip python3-venv ca-certificates \
 && rm -rf /var/lib/apt/lists/*

RUN python3 -m pip install --no-cache-dir --upgrade pip

WORKDIR /app

COPY test1_1/RAG/requirements_base.txt /app/requirements.txt

# Install CUDA-enabled PyTorch first
RUN python3 -m pip install --no-cache-dir --index-url https://download.pytorch.org/whl/cu121 \
        torch torchvision torchaudio \
 && python3 -m pip install --no-cache-dir -r /app/requirements.txt \
 && python3 -m pip install --no-cache-dir \
        fastapi uvicorn \
        langchain langchain-community langchain-ollama langchain-huggingface \
        faiss-cpu pymupdf python-dotenv sentence-transformers

COPY . /app

EXPOSE 8000
CMD ["python3", "-m", "uvicorn", "test1_1.RAG.src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]

